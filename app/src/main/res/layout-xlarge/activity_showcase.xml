<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_showcase"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/rec_base"
    tools:context="com.example.jaskirat.keyiano.showcase">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="42dp"
            android:text="LAST RECORDING:"
            android:textStyle="bold"
            android:textColor="@color/black_key"
            android:layout_marginLeft="70dp"
            android:id="@+id/last"  />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="42dp"
            android:layout_toRightOf="@id/last"
            android:layout_marginLeft="60dp"
            android:textColor="@color/darkgreen"
            android:id="@+id/recording" />


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:background="@color/light"
            android:src="@mipmap/home_black_72x72"
            android:id="@+id/exit"
            android:onClick="exit" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LAST EDITED:"
            android:textStyle="bold"
            android:layout_below="@id/last"
            android:layout_alignLeft="@id/last"
            android:layout_marginTop="10dp"
            android:textColor="@color/black_key"
            android:id="@+id/lasttime" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recording"
            android:layout_alignLeft="@+id/recording"
            android:layout_marginTop="10dp"
            android:textColor="@color/darkgreen"
            android:id="@+id/date_time" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@id/exit"
            android:layout_marginRight="5dp"
            android:background="@color/light"
            android:src="@mipmap/delete_forever_black_72x72"
            android:id="@+id/delete" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@id/delete"
            android:layout_marginRight="5dp"
            android:background="@color/light"
            android:src="@mipmap/play_circle_outline_black_72x72"
            android:id="@+id/view_play" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/c1_canvas_pic"
            android:layout_below="@id/lasttime"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/last"
            android:layout_marginLeft="8dp"
            android:id="@+id/abc" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_key"
            android:text="Music Scale"
            android:textStyle="bold"
            android:layout_below="@id/lasttime"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/scale" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/darkgreen"
            android:text="Low"
            android:textStyle="bold"
            android:layout_below="@id/scale"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:buttonTint="@color/darkgreen"
            android:id="@+id/low" />


        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/darkgreen"
            android:text="Medium"
            android:textStyle="bold"
            android:buttonTint="@color/darkgreen"
            android:id="@+id/med"
            android:layout_below="@+id/low"
            android:layout_marginTop="3dp"
            android:layout_alignLeft="@+id/low"
            android:layout_alignStart="@+id/low" />


        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/darkgreen"
            android:text="High"
            android:textStyle="bold"
            android:buttonTint="@color/darkgreen"
            android:layout_below="@id/med"
            android:layout_marginTop="3dp"
            android:layout_alignLeft="@id/low"
            android:layout_alignStart="@id/low"
            android:id="@+id/high" />

</RelativeLayout>
